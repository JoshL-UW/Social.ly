<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SavedConnectionsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3A7E7"
    tools:context=".SavedConnections">

    <TextView
        android:id="@+id/savedConnectionsTitle"
        android:layout_width="414dp"
        android:layout_height="57dp"
        android:background="#A8A8A8"
        android:gravity="center"
        android:text="@string/savedconnections_text"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/closeSavedConnectionsButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="#F6AE2D"
        android:gravity="center"
        android:text="@string/close_button_text"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>