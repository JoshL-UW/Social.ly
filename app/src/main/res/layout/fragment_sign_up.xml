<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUpFragment">

    <TextView
        android:id="@+id/signUpTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="50sp"
        android:textColor="@color/black"
        android:background="@drawable/diagonal_gradient"
        android:text="@string/signup_title"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_username_text"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="2dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/signUpTitle" />

    <EditText
        android:id="@+id/createUserNameEditText"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/rectangle_edittext"
        android:ems="10"
        android:hint="@string/create_username"
        android:inputType="text"
        android:textStyle="italic"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <TextView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_password_text"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="2dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/createUserNameEditText" />

    <EditText
        android:id="@+id/createPasswordEditText"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="20dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/rectangle_edittext"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/create_password"
        android:textStyle="italic"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_confirm_password_text"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="2dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/createPasswordEditText" />

    <EditText
        android:id="@+id/createConfirmPasswordEditText"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/rectangle_edittext"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/confirm_password"
        android:textStyle="italic"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPassword" />

    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/create_account"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/createAccountExitButton" />

    <Button
        android:id="@+id/createAccountExitButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/exit_without_saving"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:backgroundTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>