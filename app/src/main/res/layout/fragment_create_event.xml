<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diagonal_gradient"
    tools:context=".CreateEventFragment">

    <TextView
        android:id="@+id/createEventMainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center"
        android:text="@string/event_create_screen"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/createEventCode"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textStyle="italic"
        android:textSize="24sp"
        android:background="@drawable/rectangle_edittext"
        android:layout_marginBottom="255dp"
        android:ems="10"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/create_event_hint"
        android:inputType="text"
        android:maxLength="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/submitNewEventButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/black"
        android:text="@string/create_event"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/createEventCode"
        app:layout_constraintTop_toBottomOf="@+id/createEventCode" />

    <Button
        android:id="@+id/returnToMainMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/back_button"
        android:textSize="24sp"
        android:backgroundTint="@color/gray"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="@+id/createEventCode"
        app:layout_constraintTop_toTopOf="@+id/submitNewEventButton" />
</androidx.constraintlayout.widget.ConstraintLayout>